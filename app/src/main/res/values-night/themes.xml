<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoList" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color (light blue). -->
        <item name="colorPrimary">@color/light_blue_night</item>
        <item name="colorPrimaryVariant">@color/dark_blue_night</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (pink). -->
        <item name="colorSecondary">@color/pink_night</item>
        <item name="colorSecondaryVariant">@color/pink_variant_night</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color (dark blue variant). -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Background color for night mode. -->
        <item name="android:colorBackground">@color/background_night</item>

        <!-- Customize your theme here. -->
    </style>
</resources>